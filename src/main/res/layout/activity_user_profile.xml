<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile"
    android:background="@color/teal_700">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userprofile"
        android:text="User Profile"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:gravity="center"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userprofile"
        android:id="@+id/userimg"
        android:layout_margin="20dp"
        android:src="@drawable/user"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_below="@+id/userimg"
        android:layout_marginTop="2dp"
        android:gravity="start"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nametag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Name: "
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/userrealname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Bhoopathi Reddy"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:id="@+id/mobilenumber"
        android:layout_marginTop="2dp"
        android:gravity="start"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mobilenumbertag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Mobile No: "
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/userrealmobilenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="+1 514 632 6484"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/useremail"
        android:layout_below="@+id/mobilenumber"
        android:layout_marginTop="2dp"
        android:gravity="start"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/emailtag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Email Id: "
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/realemailid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="bhoopathi575@gmail.com"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signoutbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/useremail"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/design_default_color_secondary"
        android:text="Sign Out" />









</RelativeLayout>